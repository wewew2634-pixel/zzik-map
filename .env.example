# ZZIK LIVE Environment Variables
# Copy this file to .env and fill in your actual values

# ===== Node Environment =====
NODE_ENV="development" # development | production | test

# ===== Database Configuration =====
# Prisma Database URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://zzik:zzik_pw@localhost:5432/zzikmap?schema=public"

# ===== Redis Configuration =====
# Local Redis (for development)
REDIS_HOST="localhost"
REDIS_PORT="6379"

# Upstash Redis (for production)
# Get from: https://console.upstash.com
UPSTASH_REDIS_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_TOKEN="your-upstash-token"

# ===== Authentication =====
# JWT Secret for token signing (generate with: openssl rand -base64 32)
AUTH_JWT_SECRET="your-secret-key-min-32-characters-long"

# ===== Mapbox Configuration =====
# Get from: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN="pk.your-mapbox-token"

# ===== Monitoring & Error Tracking =====
# Sentry DSN (optional)
# Get from: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"

# ===== OpenTelemetry (optional) =====
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318"
OTEL_SERVICE_NAME="zzik-live"
